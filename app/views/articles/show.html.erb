<div class="container">
	<table class="table table-hover table-bordered ">
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th>No of pages</th>
		<th>Category</th>
		<th>Author</th>
		<th>Actions</th>
	</thead>
	<tbody>
	<tr>
 		<p>
  			<td><%= @article.title %></td>
		</p>
 		<p>
  			<td><%= @article.description %></td>
		</p>
		<p>
  			<td><%= @article.nopages %></td>
		</p>
		<p>
 			<td><%= @article.category.name %></td>
		</p>
		<p>
 			<td><%= @article.author.name %></td>
		</p>
		<td><%= link_to 'Edit', edit_article_path(@article),:class=>"btn btn-warning" %> 
		</td>
	</tr>
	</tbody>
</table>
	<%= link_to 'Back', articles_path,:class=>"btn btn-primary" %>
</div>