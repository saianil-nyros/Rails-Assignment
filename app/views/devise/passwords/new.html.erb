<div class="container loginpagedevise">
	<h2>Forgot your password?</h2>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
	<div class="field fieldpadding">
    <%= f.label :email,:class=>"formlabel" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>"form-control formlabel" %>
  </div>
  	<div class="actions fieldpadding">
    	<%= f.submit "Send me reset password instructions",:class=>"btn btn-success" %>
  </div>
<% end %>
	<%= render "devise/shared/links" %>
</div>
